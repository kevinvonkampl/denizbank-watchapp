<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_background"
    android:padding="12dp">

    <!-- Üst Bilgi Çubuğu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/text_view_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geri"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:18"
            android:textSize="14sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Ana İçerik Kartı -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/dark_card_background"
        app:cardElevation="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Fatura Kartları -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <!-- Telefon Faturası -->
                    <LinearLayout
                        android:id="@+id/layout_phone_bill"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/dark_grey_card"
                        android:layout_marginBottom="8dp"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Telefon Faturası"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="start|center_vertical" />

                        <Button
                            android:id="@+id/button_pay_phone"
                            android:layout_width="60dp"
                            android:layout_height="36dp"
                            android:text="Öde"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:background="@drawable/pay_button_background"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- İnternet Faturası -->
                    <LinearLayout
                        android:id="@+id/layout_internet_bill"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/dark_grey_card"
                        android:layout_marginBottom="8dp"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="İnternet"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="start|center_vertical" />

                        <Button
                            android:id="@+id/button_pay_internet"
                            android:layout_width="60dp"
                            android:layout_height="36dp"
                            android:text="Öde"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:background="@drawable/pay_button_background"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Doğalgaz Faturası -->
                    <LinearLayout
                        android:id="@+id/layout_gas_bill"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/dark_grey_card"
                        android:layout_marginBottom="8dp"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Doğalgaz"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="start|center_vertical" />

                        <Button
                            android:id="@+id/button_pay_gas"
                            android:layout_width="60dp"
                            android:layout_height="36dp"
                            android:text="Öde"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:background="@drawable/pay_button_background"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Elektrik Faturası -->
                    <LinearLayout
                        android:id="@+id/layout_electricity_bill"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/dark_grey_card"
                        android:layout_marginBottom="8dp"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Elektrik Faturası"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="start|center_vertical" />

                        <Button
                            android:id="@+id/button_pay_electricity"
                            android:layout_width="60dp"
                            android:layout_height="36dp"
                            android:text="Öde"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:background="@drawable/pay_button_background"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Su Faturası -->
                    <LinearLayout
                        android:id="@+id/layout_water_bill"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/dark_grey_card"
                        android:layout_marginBottom="8dp"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Su Faturası"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="start|center_vertical" />

                        <Button
                            android:id="@+id/button_pay_water"
                            android:layout_width="60dp"
                            android:layout_height="36dp"
                            android:text="Öde"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:background="@drawable/pay_button_background"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- TV Faturası -->
                    <LinearLayout
                        android:id="@+id/layout_tv_bill"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/dark_grey_card"
                        android:layout_marginBottom="8dp"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TV Faturası"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="start|center_vertical" />

                        <Button
                            android:id="@+id/button_pay_tv"
                            android:layout_width="60dp"
                            android:layout_height="36dp"
                            android:text="Öde"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:background="@drawable/pay_button_background"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout> 