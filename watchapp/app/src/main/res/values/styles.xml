<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 1. AÇILIŞ EKRANI TEMASI (SplashScreen) -->
    <style name="Theme.WatchApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.WatchApp</item>
    </style>


    <!-- 2. UYGULAMANIN ANA TEMASI -->
    <style name="Theme.WatchApp" parent="android:Theme.DeviceDefault" />


    <!-- 3. ANA MENÜ BUTONLARI İÇİN YARDIMCI STİLLER -->
    <style name="MainMenuCard">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardBackgroundColor">#2C2C2E</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="MainMenuCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="MainMenuIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="MainMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

</resources>